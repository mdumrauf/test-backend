{
  "plugins": [
    "promise"
  ],
  "extends": [
    "./.eslintrc-base.json",
    "plugin:promise/recommended"
  ],
  "env": {
    "browser": false,
    "node": true,
    "mocha": true
  },
  "rules": {
    "promise/no-nesting": "off",
    "promise/no-callback-in-promise": "off",
    "promise/avoid-new": "off",
    "promise/prefer-await-to-then": "error",
    "lodash/prefer-lodash-method": [
      2,
      {
        "ignoreMethods": [
          "find"
        ]
      }
    ]
  }
}
